---
apiVersion: v1
kind: Secret
metadata:
  name: {{ argo_customize_gitea_user_name_base }}{{ index }}-customers-gitops-repo
  labels:
    argocd.argoproj.io/secret-type: repository
stringData:
  type: git
  url: https://{{ argo_customize_gitea_endpoint }}/{{
      argo_customize_gitea_admin_user }}/{{ argo_customize_gitea_user_name_base }}{{ index }}-customers-gitops.git
  username: {{ argo_customize_gitea_admin_user }}
  password: {{ argo_customize_gitea_admin_password }}
  project: {{ argo_customize_argo_user_name_base }}{{ index }}
